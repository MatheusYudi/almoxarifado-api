{
    "compileOnSave": true,
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "paths": {
            "@common/*": ["common/*"],
            "@config/*": ["config/*"],
            "@decorators/*": ["decorators/*"],
            "@library/*": ["library/*"],
            "@middlewares/*": ["middlewares/*"],
            "@routes/*": ["routes/*"]
        },
        "pretty": true,
        "removeComments": false,
        "resolveJsonModule": true,
        "rootDir": "./",
        "skipLibCheck": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es5",
        "typeRoots": [
            "./node_modules/@types",
            "./src/library/third-party"
        ]
    },
    "exclude": [
        "dist",
        "node_modules",
        "types"
    ],
    "include": [
        "__mocks__",
        "__tests__",
        "src/**/*"
    ]
}
