{
    "name": "almoxarifado-api",
    "description": "Almoxarifado API",
    "version": "0.1.0",
    "license": "ISC",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com-yudi:MatheusYudi/almoxarifado-api.git"
    },
    "main": "dist/server.js",
    "scripts": {
        "build": "npm run lint && npm run test && tsc --build --clean",
        "dev": "nodemon",
        "lint": "eslint src/ --ext .ts",
        "prepare": "husky install",
        "test": "jest --passWithNoTests --runInBand --no-cache",
        "test:staged": "npm test -- --silent --verbose=false",
        "test:ci": "npm run test:staged -- --coverage",
        "test:unit": "npm test -- --watchAll -c jest-unit-config.ts",
        "test:integration": "npm test -- --watchAll -c jest-integration-config.ts"
    },
    "devDependencies": {
        "@jest-mock/express": "^1.4.5",
        "@types/jest": "^27.5.0",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.23.0",
        "@typescript-eslint/parser": "^5.23.0",
        "eslint": "^8.15.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "jest": "^27.5.1",
        "jest-mock-extended": "^2.0.6",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.7.0",
        "typescript": "^4.6.4"
    }
}
