{
    "name": "almoxarifado-api",
    "description": "Almoxarifado API",
    "version": "0.1.0",
    "license": "ISC",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git@github.com-yudi:MatheusYudi/almoxarifado-api.git"
    },
    "main": "dist/server.js",
    "scripts": {
        "build": "npm run lint && npm run test:staged && rm -rf ./dist && tsc --build",
        "compose": "docker-compose --env-file ./environments/.env.production up",
        "compose:stage": "docker-compose --env-file ./environments/.env.staging up",
        "compose:dev": "docker-compose -f docker-compose.dev.yml --env-file ./environments/.env.development up",
        "deploy": "heroku container:push web -a almoxarifado-api-v1 && heroku container:release web -a almoxarifado-api-v1",
        "deploy:stage": "heroku container:push web -a almoxarifado-api-v1-staging && heroku container:release web -a almoxarifado-api-v1-staging",
        "dev": "nodemon",
        "lint": "eslint . --ext .ts",
        "logs": "heroku logs --tail -a almoxarifado-api-v1",
        "logs:stage": "heroku logs --tail -a almoxarifado-api-v1-staging",
        "prepare": "husky install",
        "seed:create": "./node_modules/.bin/ts-node --transpile-only ./node_modules/typeorm/cli.js migration:create -c almoxarifado-api -f ./src/config/ormconfig-migrations.ts -n",
        "seed:revert": "./node_modules/.bin/ts-node --transpile-only ./node_modules/typeorm/cli.js migration:revert -c almoxarifado-api -f ./src/config/ormconfig-migrations.ts",
        "seed:run": "./node_modules/.bin/ts-node --transpile-only ./node_modules/typeorm/cli.js migration:run -c almoxarifado-api -f ./src/config/ormconfig-migrations.ts",
        "test": "jest --passWithNoTests --runInBand --no-cache",
        "test:staged": "npm test -- --silent --verbose=false",
        "test:ci": "npm run test:staged -- --coverage",
        "test:unit": "npm test -- --watchAll -c jest-unit-config.ts",
        "test:integration": "npm test -- --watchAll -c jest-integration-config.ts"
    },
    "devDependencies": {
        "@jest-mock/express": "^1.4.5",
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/jest": "^27.5.1",
        "@types/module-alias": "^2.0.1",
        "@types/node": "^17.0.35",
        "@types/supertest": "^2.0.12",
        "@types/swagger-jsdoc": "^6.0.1",
        "@types/swagger-ui-express": "^4.1.3",
        "@typescript-eslint/eslint-plugin": "^5.25.0",
        "@typescript-eslint/parser": "^5.25.0",
        "eslint": "^8.16.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-import-resolver-typescript": "^2.7.1",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "install": "^0.13.0",
        "jest": "^27.5.1",
        "jest-mock-extended": "^2.0.6",
        "nodemon": "^2.0.16",
        "prettier": "^2.6.2",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4",
        "ts-node": "^10.8.0",
        "tsconfig-paths": "^4.0.0",
        "typescript": "^4.6.4"
    },
    "dependencies": {
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "express": "^4.18.1",
        "express-multipart-file-parser": "^0.1.2",
        "express-validator": "^6.14.0",
        "helmet": "^5.0.2",
        "module-alias": "^2.2.2",
        "mysql": "^2.18.1",
        "reflect-metadata": "^0.1.13",
        "swagger-jsdoc": "^6.2.1",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.45"
    },
    "_moduleAliases": {
        "@common": "./common",
        "@config": "./config",
        "@decorators": "./decorators",
        "@library": "./library",
        "@middlewares": "./middlewares",
        "@routes": "./routes"
    }
}
